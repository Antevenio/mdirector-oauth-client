<phpunit colors="true" syntaxCheck="true" convertErrorsToExceptions="true">
    <testsuite name="Application Test Suite">
        <directory>./test/</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="/tmp/coverage.xml"/>
    </logging>
</phpunit>